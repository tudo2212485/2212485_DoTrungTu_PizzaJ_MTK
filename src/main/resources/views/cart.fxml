<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.pizza.ui.controllers.CartController"
            styleClass="root-pane">
    
    <!-- Top: Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header-bar">
            <padding>
                <Insets top="15.0" right="20.0" bottom="15.0" left="20.0"/>
            </padding>
            
            <Button text="← Trang Chủ" onAction="#handleBackToHome" styleClass="nav-button"/>
            <Button text="Tiếp Tục Mua Hàng" onAction="#handleContinueShopping" 
                    styleClass="secondary-button"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Label text="🛒 Giỏ Hàng Của Bạn" styleClass="header-title">
                <font>
                    <Font name="System Bold" size="20.0"/>
                </font>
            </Label>
        </HBox>
    </top>
    
    <!-- Center: Cart Items and Checkout Form -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
        <VBox spacing="20.0">
            <padding>
                <Insets top="20.0" right="30.0" bottom="20.0" left="30.0"/>
            </padding>
            
            <!-- Cart Items Table -->
            <VBox spacing="10.0">
                <Label text="📋 Món Đã Chọn:" styleClass="section-title">
                    <font><Font name="System Bold" size="19.0"/></font>
                </Label>
                
                <TableView fx:id="cartTable" prefHeight="200.0">
                    <columns>
                        <TableColumn fx:id="itemColumn" text="Món Ăn" prefWidth="200.0"/>
                        <TableColumn fx:id="toppingsColumn" text="Topping" prefWidth="180.0"/>
                        <TableColumn fx:id="priceColumn" text="Giá" prefWidth="100.0"/>
                    </columns>
                </TableView>
                
                <HBox spacing="10.0" alignment="CENTER">
                    <Button text="✏️ Sửa Món" onAction="#handleEditItem" 
                            styleClass="primary-button" prefWidth="150.0"/>
                    <Button text="❌ Xóa Món" onAction="#handleRemoveItem" 
                            styleClass="danger-button" prefWidth="150.0"/>
                </HBox>
            </VBox>
            
            <!-- Shipping and Summary - Side by Side -->
            <HBox spacing="20.0" alignment="TOP_CENTER">
                <!-- Shipping Options -->
                <VBox spacing="10.0" styleClass="shipping-box" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                    </padding>
                    
                    <Label text="🚚 Phương Thức Giao Hàng:" styleClass="subsection-title">
                        <font><Font name="System Bold" size="17.0"/></font>
                    </Label>
                    
                    <RadioButton fx:id="standardShippingRadio" 
                                 text="Giao hàng tiêu chuẩn (Miễn phí nếu ≥200k, còn lại 20k)"
                                 wrapText="true"/>
                    <RadioButton fx:id="expressShippingRadio" 
                                 text="Giao hàng nhanh (Cố định 40k)"/>
                </VBox>
                
                <!-- Order Summary -->
                <VBox spacing="10.0" styleClass="summary-box" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                    </padding>
                    
                    <Label text="💰 Tổng Tiền:" styleClass="subsection-title">
                        <font><Font name="System Bold" size="17.0"/></font>
                    </Label>
                    
                    <HBox>
                        <Label text="Tạm tính:" minWidth="120.0">
                            <font><Font size="15.0"/></font>
                        </Label>
                        <Label fx:id="subtotalLabel" text="0đ">
                            <font><Font size="15.0"/></font>
                        </Label>
                    </HBox>
                    
                    <HBox>
                        <Label text="Phí giao hàng:" minWidth="120.0">
                            <font><Font size="15.0"/></font>
                        </Label>
                        <Label fx:id="shippingLabel" text="0đ">
                            <font><Font size="15.0"/></font>
                        </Label>
                    </HBox>
                    
                    <Separator/>
                    
                    <HBox>
                        <Label text="Tổng cộng:" minWidth="120.0">
                            <font><Font name="System Bold" size="18.0"/></font>
                        </Label>
                        <Label fx:id="totalLabel" text="0đ" styleClass="total-text">
                            <font><Font name="System Bold" size="18.0"/></font>
                        </Label>
                    </HBox>
                </VBox>
            </HBox>
            
            <!-- Customer Information -->
            <VBox spacing="10.0">
                <Label text="📝 Thông Tin Giao Hàng:" styleClass="section-title">
                    <font><Font name="System Bold" size="19.0"/></font>
                </Label>
                
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="120.0"/>
                        <ColumnConstraints minWidth="300.0"/>
                    </columnConstraints>
                    
                    <Label text="Họ tên:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="nameField" promptText="Nhập họ tên của bạn" 
                               GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Số điện thoại:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="phoneField" promptText="Nhập số điện thoại" 
                               GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Địa chỉ:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextArea fx:id="addressArea" promptText="Nhập địa chỉ giao hàng" 
                              prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </GridPane>
            </VBox>
            
            <!-- Place Order Button -->
            <Button fx:id="placeOrderButton" text="✅ Đặt Hàng Ngay" onAction="#handlePlaceOrder" 
                    styleClass="primary-button" prefWidth="220.0" prefHeight="50.0">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>
            
        </VBox>
        </ScrollPane>
    </center>
    
</BorderPane>






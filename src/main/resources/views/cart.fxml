<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.pizza.ui.controllers.CartController"
            styleClass="root-pane">
    
    <!-- Top: Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header-bar">
            <padding>
                <Insets top="15.0" right="20.0" bottom="15.0" left="20.0"/>
            </padding>
            
            <Button text="← Trang Chủ" onAction="#handleBackToHome" styleClass="nav-button"/>
            <Button text="Tiếp Tục Mua Hàng" onAction="#handleContinueShopping" 
                    styleClass="secondary-button"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Label text="🛒 Giỏ Hàng &amp; Thanh Toán" styleClass="header-title">
                <font>
                    <Font name="System Bold" size="20.0"/>
                </font>
            </Label>
        </HBox>
    </top>
    
    <!-- Center: Cart Items and Checkout Form -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
        <VBox spacing="20.0">
            <padding>
                <Insets top="20.0" right="30.0" bottom="20.0" left="30.0"/>
            </padding>
            
            <!-- Cart Items Table -->
            <VBox spacing="10.0">
                <Label text="📋 Món Đã Chọn:" styleClass="section-title">
                    <font><Font name="System Bold" size="19.0"/></font>
                </Label>
                
                <TableView fx:id="cartTable" prefHeight="200.0">
                    <columns>
                        <TableColumn fx:id="itemColumn" text="Món Ăn" prefWidth="200.0"/>
                        <TableColumn fx:id="toppingsColumn" text="Topping" prefWidth="180.0"/>
                        <TableColumn fx:id="priceColumn" text="Giá" prefWidth="100.0"/>
                    </columns>
                </TableView>
                
                <HBox spacing="10.0" alignment="CENTER">
                    <Button text="✏️ Sửa Món" onAction="#handleEditItem" 
                            styleClass="primary-button" prefWidth="150.0"/>
                    <Button text="❌ Xóa Món" onAction="#handleRemoveItem" 
                            styleClass="danger-button" prefWidth="150.0"/>
                </HBox>
            </VBox>
            
            <!-- Payment and Summary - Side by Side -->
            <HBox spacing="20.0" alignment="TOP_CENTER">
                <!-- Payment Options -->
                <VBox spacing="10.0" styleClass="shipping-box" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                    </padding>
                    
                    <Label text="💳 Phương Thức Thanh Toán:" styleClass="subsection-title">
                        <font><Font name="System Bold" size="17.0"/></font>
                    </Label>
                    
                    <RadioButton fx:id="cashPaymentRadio" 
                                 text="💵 Tiền mặt - Thanh toán tại quầy"
                                 wrapText="true"/>
                    <RadioButton fx:id="cardPaymentRadio" 
                                 text="💳 Thẻ tín dụng/ghi nợ - Visa, Mastercard"
                                 wrapText="true"/>
                    <RadioButton fx:id="ewalletPaymentRadio" 
                                 text="📱 Ví điện tử - MoMo, ZaloPay, VNPay"
                                 wrapText="true"/>
                </VBox>
                
                <!-- Order Summary -->
                <VBox spacing="10.0" styleClass="summary-box" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                    </padding>
                    
                    <Label text="💰 Tổng Tiền:" styleClass="subsection-title">
                        <font><Font name="System Bold" size="17.0"/></font>
                    </Label>
                    
                    <HBox>
                        <Label text="Tổng cộng:" minWidth="120.0">
                            <font><Font name="System Bold" size="20.0"/></font>
                        </Label>
                        <Label fx:id="totalLabel" text="0đ" styleClass="total-text">
                            <font><Font name="System Bold" size="20.0"/></font>
                        </Label>
                    </HBox>
                    
                    <Separator/>
                    
                    <Label text="Thanh toán tại quầy" wrapText="true" 
                           style="-fx-text-fill: #757575;">
                        <font><Font size="13.0"/></font>
                    </Label>
                </VBox>
            </HBox>
            
            <!-- Customer Information (Optional) -->
            <VBox spacing="10.0">
                <Label text="👤 Thông Tin Khách Hàng (tuỳ chọn):" styleClass="section-title">
                    <font><Font name="System Bold" size="19.0"/></font>
                </Label>
                
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <Label text="Họ tên:" minWidth="100.0"/>
                    <TextField fx:id="customerNameField" promptText="Nhập tên khách hàng (không bắt buộc)" 
                               prefWidth="400.0"/>
                </HBox>
                
                <Label text="💡 Để trống nếu khách hàng không cung cấp thông tin" 
                       style="-fx-text-fill: #757575;">
                    <font><Font size="12.0"/></font>
                </Label>
            </VBox>
            
            <!-- Place Order Button -->
            <Button fx:id="placeOrderButton" text="✅ Thanh Toán &amp; Hoàn Tất Đơn Hàng" 
                    onAction="#handlePlaceOrder" 
                    styleClass="primary-button" prefWidth="300.0" prefHeight="50.0">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>
            
        </VBox>
        </ScrollPane>
    </center>
    
</BorderPane>
